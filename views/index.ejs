    <p class="author__body">Web Developer and Porgrammer</p>
</div>

<img src="/imgs/hero-img.jpg" alt="person looking out through window" class="hero-image" width="981px" height="528px">

<section class="articles">
    <h2 class="article__heading">Latest Posts</h2>
    <ul class="article-ul">
        
        
        <% data.forEach(post => { %>
            <li>
                <a href="/post/<%= post._id %>">
                    <span><%= post.title %></span>
                    <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
                </a>
            </li>
        <% }) %>
        
    </ul>
    <% if (nextPage !== null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>
</section>